<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.PaymentActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:padding="16dp"
                android:id="@+id/tipbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:textAlignment="center"
                android:text="Use panels below to view or select membership plans. Scroll to checkout button at the bottom of this page to go to payment."/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viewed_feedback_bronze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:textAlignment="center"
                android:text="Basic Membership" />

            <TextView
                android:id="@+id/selection_feedback_bronze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:text="Bronze" />

            <ImageView
                android:id="@+id/bronze_membership_icon"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                app:srcCompat="@drawable/bronzerounded" />

            <LinearLayout
                android:id="@+id/down_arrow_bronze"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/more_details_button_bronze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:drawableTint="@color/white"
                    android:text="more details">
                </Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/membership_details_bronze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/less_details_button_bronze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_up_24"
                    android:drawableTint="@color/white"
                    android:text="less details" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16dp"
                    android:text="Lorem ipsum dolor sit amet." />

                <Button
                    android:id="@+id/selection_button_bronze"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:drawableRight="@drawable/ic_baseline_fitness_center_24"
                    android:drawableTint="@color/white"
                    android:text="select this plan (£2.99)" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Intermediate Membership"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="16dp"
                android:textAlignment="center"
                android:id="@+id/viewed_feedback_silver"
                />

            <TextView
                android:id="@+id/selection_feedback_silver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:text="Silver" />

            <ImageView
                android:id="@+id/silver_membership_icon"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                app:srcCompat="@drawable/silverrounded" />

            <LinearLayout
                android:id="@+id/down_arrow_silver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/more_details_button_silver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:drawableTint="@color/white"
                    android:text="more details">
                </Button>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/membership_details_silver"
                >

                <Button
                    android:id="@+id/less_details_button_silver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:drawableTint="@color/white"
                    android:text="less details"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_up_24"></Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Lorem ipsum dolor sit amet."/>

                <Button
                    android:id="@+id/selection_button_silver"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:drawableTint="@color/white"
                    android:text="select this plan (£3.99)"
                    android:drawableRight="@drawable/ic_baseline_fitness_center_24"></Button>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Advanced Membership"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="16dp"
                android:textAlignment="center"
                android:id="@+id/viewed_feedback_gold"
                />

            <TextView
                android:id="@+id/selection_feedback_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:text="Gold" />

            <ImageView
                android:id="@+id/gold_membership_icon"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                app:srcCompat="@drawable/goldrounded" />

            <LinearLayout
                android:id="@+id/down_arrow_gold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/more_details_button_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:drawableTint="@color/white"
                    android:text="more details">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/membership_details_gold"
                >

                <Button
                    android:id="@+id/less_details_button_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:drawableTint="@color/white"
                    android:text="less details"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_up_24"></Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Lorem ipsum dolor sit amet."/>

                <Button
                    android:id="@+id/selection_button_gold"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:drawableTint="@color/white"
                    android:text="select this plan (£5.99)"
                    android:drawableRight="@drawable/ic_baseline_fitness_center_24"></Button>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/checkout_button_default"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center"
                android:drawableTint="@color/white"
                android:text="checkout with selected plan"
                android:drawableRight="@drawable/ic_baseline_account_circle_24"
                android:visibility="visible"/>

            <Button
                android:id="@+id/checkout_button_bronze"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center"
                android:drawableTint="@color/white"
                android:text="checkout with bronze plan"
                android:drawableRight="@drawable/ic_baseline_account_circle_24"
                android:onClick="planBought"
                android:visibility="gone"/>

            <Button
                android:id="@+id/checkout_button_silver"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center"
                android:drawableTint="@color/white"
                android:text="checkout with silver plan"
                android:drawableRight="@drawable/ic_baseline_account_circle_24"
                android:onClick="planBought"
                android:visibility="gone"/>

            <Button
                android:id="@+id/checkout_button_gold"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center"
                android:drawableTint="@color/white"
                android:text="checkout with gold plan"
                android:drawableRight="@drawable/ic_baseline_account_circle_24"
                android:onClick="planBought"
                android:visibility="gone"/>

            <Button
                android:id="@+id/checkout_button_no_selection"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center"
                android:drawableTint="@color/white"
                android:text="please select a plan above to checkout"
                android:drawableRight="@drawable/ic_baseline_account_circle_24"
                android:visibility="gone"/>

        </LinearLayout>



    </ScrollView>



</LinearLayout>

