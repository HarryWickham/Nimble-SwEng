<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.PaymentActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:padding="16dp"
                android:id="@+id/tipbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:textAlignment="center"
                android:text="Use panels below to view or select membership plans. Scroll to checkout button at the bottom of this page to go to payment."/>

            <ListView
                android:id="@+id/expanding_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />



            <Button
                android:id="@+id/checkout_button_default"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center"
                android:drawableTint="@color/white"
                android:text="checkout with selected plan"
                android:drawableRight="@drawable/ic_baseline_account_circle_24"
                android:visibility="visible"/>

            <Button
                android:id="@+id/checkout_button_bronze"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center"
                android:drawableTint="@color/white"
                android:text="checkout with bronze plan"
                android:drawableRight="@drawable/ic_baseline_account_circle_24"
                android:onClick="planBought"
                android:visibility="gone"/>

            <Button
                android:id="@+id/checkout_button_silver"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center"
                android:drawableTint="@color/white"
                android:text="checkout with silver plan"
                android:drawableRight="@drawable/ic_baseline_account_circle_24"
                android:onClick="planBought"
                android:visibility="gone"/>

            <Button
                android:id="@+id/checkout_button_gold"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center"
                android:drawableTint="@color/white"
                android:text="checkout with gold plan"
                android:drawableRight="@drawable/ic_baseline_account_circle_24"
                android:onClick="planBought"
                android:visibility="gone"/>

            <Button
                android:id="@+id/checkout_button_no_selection"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom|center"
                android:drawableTint="@color/white"
                android:text="please select a plan above to checkout"
                android:drawableRight="@drawable/ic_baseline_account_circle_24"
                android:visibility="gone"/>

        </LinearLayout>



    </ScrollView>



</LinearLayout>

