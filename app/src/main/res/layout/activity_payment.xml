<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.PaymentActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Basic Membership Plan"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp"
            android:id="@+id/writing"
            />


            <ImageView
                android:id="@+id/basicmembershippic"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                app:srcCompat="@drawable/bronzerounded" />


            <Button
            android:drawableTint="@color/white"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="details"
            android:id="@+id/pushme"
            />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Intermediate Membership plan"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="16dp"
                android:id="@+id/writing1"
                />

            <ImageView
                android:id="@+id/intermediatemembershippic"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                app:srcCompat="@drawable/silverrounded" /> />



            <Button
                android:drawableTint="@color/white"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="details"
                android:id="@+id/pushme1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Advanced Membership Plan"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="16dp"
                android:id="@+id/writing2"
                />

            <ImageView
                android:id="@+id/advancedmembershippic"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                app:srcCompat="@drawable/goldrounded" /> />

            <Button
                android:drawableTint="@color/white"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="details"
                android:id="@+id/pushme2"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>